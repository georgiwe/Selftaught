@using System.Collections.Generic;
@using Selftaught.Web.InputModels.Words;
@model IEnumerable<WordAttributeInputModel>

@{
    var i = 0;
}

@foreach (var attr in Model)
{
    <div class="form-group">
        <label for="@attr.Name" class="col-md-2 control-label">@attr.Name</label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="[@i].Value" placeholder="@attr.Name" />
            @Html.ValidationMessage("[" + i + "].Value")
            <input type="hidden" name="[@i].Name" value="@attr.Name" />
            <input type="hidden" name="[@i].Rank" value="@attr.Rank" />
        </div>
    </div>

    i++;
}