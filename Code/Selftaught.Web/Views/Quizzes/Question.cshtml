@model Selftaught.Data.Models.QuizQuestion

@{
    ViewBag.Title = "Take a Quiz";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("GiveAnswer", "Quizzes", FormMethod.Post, new { @class = "form form-horizontal" }))
{
    Html.AntiForgeryToken();

    <div class="form-group">
        @Html.LabelFor(m => m.Question, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            <span class="control-label">@Model.Question</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Answer, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @*@Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })*@
            <input type="text" name="Answer" class="form-control" placeholder="Your answer" required="required" />
        </div>
    </div>

    <input type="submit" value="Submit Answer" class="btn btn-default" />
}

<br />
<small>*Your answers are final</small>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval");
}