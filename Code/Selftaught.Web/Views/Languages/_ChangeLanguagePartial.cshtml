@using System.Collections.Generic;
@model IEnumerable<string>

<ul class="nav navbar-nav pull-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Languages<b class="caret"></b></a>
        <ul class="dropdown-menu">

            @foreach (var langName in @Model)
            {
                string currName = null;

                if (this.Session["language"] != null)
                {
                    currName = this.Session["language"].ToString();
                }

                <li>
                    @if (currName == langName)
                    {
                        <span class="glyphicon glyphicon-ok"></span>
                    }

                    @Html.ActionLink(langName, "ChangeLanguage", "Languages", new { langName = langName, returnUrl = @Request.RawUrl }, new { @class = "text-center", style = "display: block;" })
                </li>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <li class="divider"></li>

                <li>@Html.ActionLink("Manage Languages", "Manage", "Languages")</li>
            }
        </ul>
    </li>
</ul>